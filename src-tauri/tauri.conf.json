{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-mobile-file-association-example",
  "version": "0.1.0",
  "identifier": "app.tauri.fileassociation",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "tauri-mobile-file-association-example",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "png"
        ],
        "mimeType": "image/png",
        "rank": "Default"
      },
      {
        "ext": [
          "jpg",
          "jpeg"
        ],
        "mimeType": "image/jpeg",
        "rank": "Alternate"
      },
      {
        "ext": [
          "gif"
        ],
        "mimeType": "image/gif",
        "rank": "Owner"
      },
      {
        "ext": [
          "taurijson"
        ],
        "mimeType": "application/octet-stream",
        "exportedType": {
          "identifier": "com.tauri.dev-file-associations-demo.taurijson",
          "conformsTo": [
            "public.json"
          ]
        }
      },
      {
        "ext": [
          "taurid"
        ],
        "exportedType": {
          "identifier": "com.tauri.dev-file-associations-demo.tauridata",
          "conformsTo": [
            "public.data"
          ]
        }
      }
    ]
  }
}